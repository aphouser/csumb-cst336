                    <input type="text" bar_id=<%=candyInfo['bar_id']%> class="form-control" name="bar_id" value="<%=candyInfo['bar_id']%>" disabled>
                </div>
                <div calss="col">
                    <input type="text" bar_id=<%=candyInfo['bar_id']%> class="form-control" name="candy_name" value="<%=candyInfo['candy_name']%>">
                </div>
                <div class="col">
                    <input type="text" bar_id=<%=candyInfo['bar_id']%> class="form-control" name="wrap_color" value="<%=candyInfo['wrap_color']%>">
                </div>    
                <div class="col">
                    <input type="text" bar_id=<%=candyInfo['bar_id']%> class="form-control" name="nut" value="<%=candyInfo['nut']%>">
                </div>    
                <div class="col">    
                    <input type="text" bar_id=<%=candyInfo['bar_id']%> class="form-control" name="nut_type" value="<%=candyInfo['nut_type']%>">
                </div>
