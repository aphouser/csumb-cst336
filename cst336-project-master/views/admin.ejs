                <input type="text" ftype="new" name="nut_type" class="form-control" placeholder="Type of nuts">
            </div>
            <div class="col">
                <input type="text" ftype="new" name="size_oz" class="form-control" placeholder="Size in oz">
            </div>
            <div class="col">
                <input type="text" ftype="new" name="kcal" class="form-control" placeholder="Calories">
            </div>
            <div class="col">
                <input type="text" ftype="new" name="price" class="form-control" placeholder="Price">
            </div>
            <div class="col">
                <input type="button" value="Add New Item" class="newItem btn btn-primary btn-login text-uppercase font-weight-bold mb-2">
            </div>
        </div>
