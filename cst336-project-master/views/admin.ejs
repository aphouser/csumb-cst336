                    <input type="text" bar_id=<%=candyInfo['bar_id']%> class="form-control" name="size_oz" value="<%=candyInfo['size_oz']%>" oz.>
                </div>
                <div class="col">
                    <input type="text" bar_id=<%=candyInfo['bar_id']%> class="form-control" name="kcal" value="<%=candyInfo['kcal']%>" cal.>
                </div>
                <div class="col">
                    <input type="text" bar_id=<%=candyInfo['bar_id']%> class="form-control" name="price" value="<%=candyInfo['price']%>">
                </div>
                <div class="col">
                    <input type="button" name="updateButton" value="Update Item" bar_id=<%=candyInfo['bar_id']%> class="updateItem btn btn-primary btn-login text-uppercase font-weight-bold mb-2">
                </div>
                <div class="col">
                    <input type="button" name="deleteButton" value="Delete Item" bar_id=<%=candyInfo['bar_id']%> class="delRow btn btn-primary btn-login text-uppercase font-weight-bold mb-2">
                </div>
            </div>
        </form>
    <% }) %>
